# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure Deployment Names
AZURE_DEPLOYMENT_GPT35=gpt-35-turbo
AZURE_DEPLOYMENT_GPT4=gpt-4o
AZURE_DEPLOYMENT_GPT4_MINI=gpt-4o-mini

# Ollama Configuration (for local models)
OLLAMA_MODEL=llama3.2:1b
OLLAMA_BASE_URL=http://localhost:11434

# Memory Storage Paths
MEMORY_STORAGE_PATH=./crew_memory
ENTITY_MEMORY_PATH=./entity_memory
KNOWLEDGE_BASE_PATH=./knowledge

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/crewai.log

# Project Settings
PROJECT_NAME=AIAgents
OUTPUT_DIR=./output
TEMP_DIR=./temp

# Rate Limiting
MAX_RPM=10
MAX_RETRIES=3
TIMEOUT_SECONDS=120

# Vector Database Configuration (if using external vector DB)
# PINECONE_API_KEY=your-pinecone-key
# PINECONE_ENVIRONMENT=your-pinecone-env
# WEAVIATE_URL=http://localhost:8080
# CHROMA_HOST=localhost
# CHROMA_PORT=8000